<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fragment_page_rootview"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             tools:context="com.happiness.ministry.moodtracker.Controllers.Fragments.PageFragment">

    <!-- History Button -->
    <Button
        android:id="@+id/fragment_page_history"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:background="@drawable/ic_history_black"
        />


    <!-- Comment Button -->
    <Button
        android:id="@+id/fragment_page_comment"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="20dp"
        android:background="@drawable/ic_note_add_black"
        />


    <!-- Smiley image -->
    <ImageView
        android:id="@+id/fragment_page_smiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/smiley_happy"
        />

</FrameLayout>
